        name: mas-fvt-post-update
      params:
        - name: image_pull_policy
          value: $(params.image_pull_policy)
        - name: mas_instance_id
          value: $(params.mas_instance_id)
      when:
        - input: $(params.sync_with_update)
          operator: in
          values: ["true", "True"]
      runAfter:
        - waitfor-update

    # Upgrade Sync Point
    # -------------------------------------------------------------------------
    - name: pre-upgrade
      timeout: "0"
      taskRef:
        kind: Task
        name: mas-fvt-pre-upgrade
      params:
        - name: image_pull_policy
          value: $(params.image_pull_policy)
        - name: mas_instance_id
          value: $(params.mas_instance_id)
      when:
        - input: $(params.sync_with_upgrade)
