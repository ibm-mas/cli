#!/bin/bash

# Usage: mas install

function trap_exit {
  RC=$?
  if [[ $RC != "0" ]]; then
    echo_warning "\nFatal Error[$RC]  See $LOGFILE for details"
  fi
  save_config
}
function trap_int {
  # Reset any modifications made to the terminal
  tset

  echo
  echo
  save_config
  exit 0
}

trap trap_exit EXIT
trap trap_int INT


DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
CONFIG_DIR="$HOME/.ibm-mas/config"
LOG_DIR="$HOME/.ibm-mas/logs"
LOGFILE=$LOG_DIR/mas.log

# Note: "latest" is overwritten with the actual version at build time
VERSION=latest

mkdir -p $LOG_DIR
mkdir -p $CONFIG_DIR

# export ANSIBLE_CONFIG=$DIR/ansible.cfg

# General purpose
. $DIR/functions/catalog_utils
. $DIR/functions/connect
. $DIR/functions/utils
. $DIR/functions/save_config
# MAS provisioning support
. $DIR/functions/provision_fyre
. $DIR/functions/provision_roks
. $DIR/functions/provision_aws
# MAS installation support
. $DIR/functions/install
. $DIR/functions/pipeline_config
. $DIR/functions/pipeline_install_operator
. $DIR/functions/pipeline_install_tasks
. $DIR/functions/pipeline_prepare
. $DIR/functions/pipeline_run
. $DIR/functions/pipeline_show_config
. $DIR/functions/update
. $DIR/functions/upgrade
. $DIR/functions/uninstall
# Airgap support
. $DIR/functions/setup_mirror_registry
. $DIR/functions/mirror_to_registry
. $DIR/functions/mirror_redhat_to_registry
. $DIR/functions/configure_ocp_for_mirror
# Manage OIDC for configtool
. $DIR/functions/configtool_oidc
# Must Gather
. $DIR/functions/must_gather
# GitOps
. $DIR/functions/gitops_utils
. $DIR/functions/gitops_bootstrap
. $DIR/functions/gitops_init_cluster
. $DIR/functions/gitops_init_cis_compliance
. $DIR/functions/gitops_init_license
. $DIR/functions/gitops_init_mongo
. $DIR/functions/gitops_init_kafka
. $DIR/functions/gitops_init_kafka_config
. $DIR/functions/gitops_init_suite
. $DIR/functions/gitops_init_suite_config
. $DIR/functions/gitops_init_suite_idp_config
. $DIR/functions/gitops_init_suite_smtp_config
. $DIR/functions/gitops_init_suite_workspace
. $DIR/functions/gitops_deprovision_suite
. $DIR/functions/gitops_deprovision_suite_config
. $DIR/functions/gitops_deprovision_suite_workspace
. $DIR/functions/gitops_init_efs
. $DIR/functions/gitops_init_db2u
. $DIR/functions/gitops_init_db2u_jdbc_config
. $DIR/functions/gitops_db2u_jdbc_config_rotate_password
. $DIR/functions/gitops_process_mongo_user
. $DIR/functions/gitops_init_aws_infrastructure
. $DIR/functions/gitops_init_rosa
. $DIR/functions/gitops_deprovision_rosa
. $DIR/functions/gitops_deprovision_cluster
. $DIR/functions/gitops_deprovision_mongo
. $DIR/functions/gitops_delete_kafka_config
. $DIR/functions/gitops_deprovision_efs
. $DIR/functions/gitops_deprovision_kafka
. $DIR/functions/gitops_deprovision_db2u

load_config
case $1 in
  fyre|provision-fyre)
    echo "${TEXT_UNDERLINE}IBM Maximo Application Suite FYRE Cluster Provisioner (v${VERSION})${TEXT_RESET}"
    echo "Powered by ${COLOR_CYAN}${TEXT_UNDERLINE}https://github.com/ibm-mas/ansible-devops/${TEXT_RESET}"
    echo
    reset_colors
    update_ansible_collections
    provision_fyre "$@"
    ;;

  roks|provision-roks)
    echo "${TEXT_UNDERLINE}IBM Maximo Application Suite ROKS Cluster Provisioner (v${VERSION})${TEXT_RESET}"
    echo "Powered by ${COLOR_CYAN}${TEXT_UNDERLINE}https://github.com/ibm-mas/ansible-devops/${TEXT_RESET}"
    echo
    reset_colors
    update_ansible_collections
    provision_roks "$@"
