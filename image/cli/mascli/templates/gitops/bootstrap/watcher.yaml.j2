---
kind: Secret
apiVersion: v1
metadata:
  name: ghe-pat-secret
  namespace: openshift-gitops
  labels:
    argocd.argoproj.io/secret-type: repository
stringData:
  password: {{ APP_REPO_PAT }}
  url: {{ APP_REPO_URL }}
  username: not-used
type: Opaque
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ CLUSTER_ID }}-watcher
  namespace: openshift-gitops
spec:
  destination:
    server: 'https://kubernetes.default.svc'
  source:
    path: {{ CLUSTER_ID }}/apps
    repoURL: {{ APP_REPO_URL }}
    targetRevision: HEAD
    directory:
      recurse: true
  sources: []
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: false
