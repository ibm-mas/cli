apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: mas-{{ MAS_INSTANCE_ID }}-watson-studio-config
  namespace: openshift-gitops
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: mas-{{ MAS_INSTANCE_ID }}-core
    server: 'https://kubernetes.default.svc'
  project: {{ MAS_INSTANCE_ID }}
  source:
    path: applications/ibm-watson-studio-config
    plugin:
      env:
        - name: HELM_VALUES
          value: |
            mas_instance_id: {{ MAS_INSTANCE_ID }}
            suite_watson_studio_username: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_WATSON_STUDIO_USERNAME }}>
            suite_watson_studio_password: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_WATSON_STUDIO_PASSWORD }}>
            suite_watson_studio_secret_name: "{{ MAS_INSTANCE_ID }}-usersupplied-watsonstudio-creds-system"
            watson_studio_config:
              config:
                credentials:
                  secretName: "{{ MAS_INSTANCE_ID }}-usersupplied-watsonstudio-creds-system"
                endpoint: "{{ SECRET_KEY_WATSON_STUDIO_URL }}"
              displayName: "MAS - Watson Studio configuration"
              type: external

    repoURL: 'https://github.com/ibm-mas/gitops'
    targetRevision: {{ GITOPS_VERSION }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=false
