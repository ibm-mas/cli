- name: app-install-iot
  timeout: "0"
  taskRef:
    name: mas-devops-suite-app-install
    kind: Task
  params:
    {{ lookup('template', pipeline_src_dir ~ '/taskdefs/common/cli-params.yml.j2') | indent(4) }}
    - name: artifactory_username
      value: $(params.artifactory_username)
    - name: artifactory_token
      value: $(params.artifactory_token)

    - name: mas_instance_id
      value: $(params.mas_instance_id)
    - name: mas_app_id
      value: iot
    - name: mas_app_channel
      value: "$(params.mas_app_channel_iot)"
    - name: ibm_entitlement_key
      value: $(params.ibm_entitlement_key)
    - name: custom_labels
      value: $(params.custom_labels)
    - name: mas_app_settings_iot_deployment_size
      value: $(params.mas_app_settings_iot_deployment_size)
    - name: mas_app_settings_iot_mqttbroker_pvc_storage_class
      value: $(params.storage_class_rwo) # use common rwo storage class as user is not prompted to choose this storage class
    - name: mas_app_settings_iot_fpl_pvc_storage_class
      value: $(params.storage_class_rwo) # use common rwo storage class as user is not prompted to choose this storage class

    # Workspace
    - name: mas_workspace_id
      value: "$(params.mas_workspace_id)"
  workspaces:
    - name: configs
      workspace: shared-configs
    - name: pod-templates
      workspace: shared-pod-templates
  when:
    - input: "$(params.mas_app_channel_iot)"
      operator: notin
      values: [""]