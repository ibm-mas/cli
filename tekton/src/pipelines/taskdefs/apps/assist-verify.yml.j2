- name: app-verify-assist
  timeout: "0"
  taskRef:
    name: mas-devops-suite-app-verify
    kind: Task
  params:
    {{ lookup('template', 'taskdefs/common/cli-params.yml.j2') | indent(4) }}
    - name: devops_suite_name
      value: app-verify-assist

    # MAS Details
    - name: mas_instance_id
      value: $(params.mas_instance_id)
    - name: mas_workspace_id
      value: "$(params.mas_workspace_id)"
    
    # Application CR Details
    - name: mas_app_ws_apiversion
      value: apps.mas.ibm.com/v1
    - name: mas_app_ws_kind
      value: AssistWorkspace
    - name: mas_app_namespace
      value: mas-$(params.mas_instance_id)-assist
    
    # Custom Label Support
    - name: custom_labels
      value: $(params.custom_labels)
