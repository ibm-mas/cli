---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: gitops-suite
spec:
  params:
    - name: dns_provider
      type: string
      default: cis
    - name: cluster_name
      type: string
    - name: account
      type: string
    - name: secrets_path
      type: string
    - name: mas_instance_id
      type: string
    - name: mongo_provider
      type: string
      default: aws
    - name: user_action
      type: string
      default: add
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: sls_channel
      type: string
    - name: mas_channel
      type: string
    - name: mas_annotations
      type: string
      default: ''
    - name: mas_image_tags
      type: string
      default: ''
    - name: mas_labels
      type: string
      default: ''
    - name: mas_domain
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: icr_cp
      type: string
    - name: icr_cp_open
      type: string
    - name: mas_manual_cert_mgmt
      type: string
    - name: cluster_url
      type: string
      default: ""
    - name: cert_manager_namespace
      type: string
      default: "cert-manager"

    - name: cis_subdomain
      type: string
      default: ""
    - name: cis_mas_domain
      type: string
      default: ""
    - name: ocp_cluster_domain
      type: string
      default: ""
    - name: mas_workspace_id
      type: string
    - name: cis_enhanced_security
      type: string
      default: "True"
    - name: cis_proxy
      type: string
      default: "True"
    - name: override_edge_certs
      type: string
      default: "True"
    - name: cis_email
      type: string
      default: ""
    - name: cis_crn
      type: string
      default: ""
    - name: mas_config_dir
      type: string
    - name: cis_service_name
      type: string
      default: ""
    - name: cis_waf
      type: string
      default: "True"
    - name: update_dns_entries
      type: string
      default: "True"
    - name: delete_wildcards
      type: string
      default: "True"
    - name: mas_manual_certs_yaml
      type: string
      default: ""

  stepTemplate:
    name: gitops-suite
    env:
      - name: CLUSTER_URL
        value: $(params.cluster_url)
      - name: DNS_PROVIDER
        value: $(params.dns_provider)
      - name: CLUSTER_NAME
        value: $(params.cluster_name)
      - name: ACCOUNT
        value: $(params.account)
      - name: SECRET_PATH
        value: $(params.secrets_path)
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)
      - name: MONGODB_PROVIDER
        value: $(params.mongo_provider)
      - name: USER_ACTION
        value: $(params.user_action)
      - name: GIT_BRANCH
        value: $(params.git_branch)
      - name: GITHUB_ORG
        value: $(params.github_org)
      - name: GITHUB_HOST
        value: $(params.github_host)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: SM_AWS_REGION
        value: $(params.avp_aws_secret_region)
      - name: MAS_DOMAIN
        value: $(params.mas_domain)
      - name: ICR_CP
        value: $(params.icr_cp)
      - name: ICR_CP_OPEN
        value: $(params.icr_cp_open)
      - name: MAS_CHANNEL
        value: $(params.mas_channel)
      - name: MAS_ANNOTATIONS
        value: $(params.mas_annotations)
      - name: MAS_IMAGE_TAGS
        value: $(params.mas_image_tags)
      - name: MAS_LABELS
        value: $(params.mas_labels)
      - name: SLS_CHANNEL
        value: $(params.sls_channel)
      - name: MAS_MANUAL_CERT_MGMT
        value: $(params.mas_manual_cert_mgmt)
      - name: CERT_MANAGER_NAMESPACE
        value: $(params.cert_manager_namespace)

      # cis
      - name: CIS_SUBDOMAIN
        value: $(params.cis_subdomain)
      - name: CIS_MAS_DOMAIN
        value: $(params.cis_mas_domain)
      - name: OCP_CLUSTER_DOMAIN
        value: $(params.ocp_cluster_domain)
      - name: MAS_WORKSPACE_ID
        value: $(params.mas_workspace_id)
      - name: CIS_ENHANCED_SECURITY
        value: $(params.cis_enhanced_security)
      - name: CIS_PROXY
        value: $(params.cis_proxy)
      - name: OVERRIDE_EDGE_CERTS
        value: $(params.override_edge_certs)
      - name: CIS_EMAIL
        value: $(params.cis_email)
      - name: CIS_CRN
        value: $(params.cis_crn)
      - name: MAS_CONFIG_DIR
        value: $(params.mas_config_dir)
      - name: CIS_SERVICE_NAME
        value: $(params.cis_service_name)
      - name: CIS_WAF
        value: $(params.cis_waf)

      - name: UPDATE_DNS_ENTRIES
        value: $(params.update_dns_entries)
      - name: DELETE_WILDCARDS
        value: $(params.delete_wildcards)

      - name: MAS_MANUAL_CERTS_YAML 
        value: $(params.mas_manual_certs_yaml)
    envFrom:
      - configMapRef:
          name: environment-properties
          optional: true
      - secretRef:
          name: secure-properties
  steps:
    - args:
      - |-

        git config --global user.name "MAS Automation"
        git config --global user.email "you@example.com"
        git config --global user.password $GITHUB_PAT

        echo "Image Tags ............................ ${MAS_IMAGE_TAGS}"
        echo "Annotations ........................... ${MAS_ANNOTATIONS}"
        echo "Labels ................................ ${MAS_LABELS}"

        # Parse MAS variables from json to dict        

        MAS_ANNOTATIONS=$(echo "${MAS_ANNOTATIONS}" | sed "s/'/\"/g")
        export MAS_ANNOTATIONS=$(echo "${MAS_ANNOTATIONS}" | yq --yaml-output)
        echo " MAS_ANNOTATIONS = ${MAS_ANNOTATIONS}"

        MAS_IMAGE_TAGS=$(echo "${MAS_IMAGE_TAGS}" | sed "s/'/\"/g")
        export MAS_IMAGE_TAGS=$(echo "${MAS_IMAGE_TAGS}" | yq --yaml-output)
        echo " MAS_IMAGE_TAGS = ${MAS_IMAGE_TAGS}"

        MAS_LABELS=$(echo "${MAS_LABELS}" | sed "s/'/\"/g")
        export MAS_LABELS=$(echo "${MAS_LABELS}" | yq --yaml-output)
        echo " MAS_LABELS = ${MAS_LABELS}"

        sed -n -e 's/^.*api.fvtsaas.//p' | cut -d: -f1
        mkdir -p /tmp/init-suite
        mas gitops-suite -a $ACCOUNT -c $CLUSTER_NAME -m $MAS_INSTANCE_ID \
        --secrets-path $SECRET_PATH \
        --dir /tmp/init-suite \
        --github-push \
        --github-host $GITHUB_HOST \
        --github-org  $GITHUB_ORG \
        --github-repo $GITHUB_REPO \
        --git-branch $GIT_BRANCH

        exit $?
      command:
        - /bin/sh
        - -c
      name: gitops-suite
      imagePullPolicy: IfNotPresent
      image: quay.io/ibmmas/cli:9.0.0-pre.gitops
  workspaces:
    - name: configs
