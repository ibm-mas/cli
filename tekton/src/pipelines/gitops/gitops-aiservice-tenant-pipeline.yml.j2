      type: string
    - name: aiservice_storage_provider
      type: string
    - name: aiservice_storage_ssl
      type: string
    - name: aiservice_s3_endpoint_url
      type: string
    - name: aiservice_s3_bucket_prefix
      type: string
    - name: rsl_url
