#!/bin/bash

# Manage Storage Classes for Doclinks, BIM and JMS

function config_pipeline_manage_storage_classes() {

  MAS_APP_SETTINGS_DOCLINKS_PVC_STORAGE_CLASS=$STORAGE_CLASS_RWX
  MAS_APP_SETTINGS_BIM_PVC_STORAGE_CLASS=$STORAGE_CLASS_RWX
  MAS_APP_SETTINGS_JMS_QUEUE_PVC_STORAGE_CLASS=$STORAGE_CLASS_RWX

  MAS_APP_SETTINGS_DOCLINKS_PVC_ACCESSMODE=$PIPELINE_STORAGE_ACCESSMODE
  MAS_APP_SETTINGS_BIM_PVC_ACCESSMODE=$PIPELINE_STORAGE_ACCESSMODE
  MAS_APP_SETTINGS_JMS_QUEUE_PVC_ACCESSMODE=$PIPELINE_STORAGE_ACCESSMODE

}
