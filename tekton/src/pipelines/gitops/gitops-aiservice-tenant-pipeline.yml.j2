spec:
  params:
    - name: cluster_name
      type: string
    - name: account
      type: string
    - name: cluster_id
      type: string
    - name: cluster_url
      type: string
    - name: secrets_path
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: aiservice_namespace
      type: string
    - name: aiservice_provision_tenant
      type: string
    - name: aiservice_instance_id
      type: string
    - name: tenantNamespace
      type: string
    - name: tenant_id
      type: string
    - name: cluster_domain
      type: string
    - name: in_saas_env
      type: string
    - name: mas_icr_cp
      type: string
    - name: mas_icr_cpopen
      type: string
    - name: drocfg_url
      type: string
    - name: slscfg_url
      type: string
