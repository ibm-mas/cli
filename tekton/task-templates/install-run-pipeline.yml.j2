---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: mas-install-run-pipeline
spec:
  params:    
    # Run Pipeline Parameters
    - name: pipelinerun_timeout
      type: string
      description: pipelinerun timeout
      default: 10h
    - name: task_name_suffix
      description: optional suffix to pipelinerun task name
      default: ""
    
    # Common Parameters
    {{ lookup('template', 'pipeline-templates/params/common.yml.j2') | indent(4) }}

    # Install Parameters
    {{ lookup('template', 'pipeline-templates/params/install.yml.j2') | indent(4) }}
  
  stepTemplate:
    env:
      - name: PIPELINE_NAME
        value: install
      - name: PIPELINERUN_TIMEOUT
        value: $(params.pipelinerun_timeout)
      - name: PIPELINERUN_WAIT
        value: "true"
      - name: TASK_NAME_SUFFIX
        value: $(params.task_name_suffix)
{% for common_param in common_params_definition.params %}
      - name: {{ common_param.name | upper }}
        value: $(params.{{ common_param.name }})
{% endfor %}
{% for install_param in install_params_definition.params %}
      - name: {{ install_param.name | upper }}
        value: $(params.{{ install_param.name }})
{% endfor %}

  steps:
    # It uses pipelinerun_template_file_name to know what pipeline to run
    - name: 'run-pipeline'
      command:
        - /opt/app-root/src/run-pipeline.sh
      image: '$(params.fvt_image_registry)/mas-devops/ansible-fvt:{{ ansible_fvt_version }}'
      imagePullPolicy: Always
