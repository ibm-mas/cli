#!/usr/bin/env bash

function gitops() {
  echo ""
  echo "All gitops commands are non-interactive only."
  echo ""
  echo "${COLOR_CYAN}GitOps Bootstrap & Infrastructure:${TEXT_RESET}"
  echo "  ${COLOR_YELLOW}mas gitops-bootstrap${TEXT_RESET}                            Initialize GitOps repository structure and ArgoCD setup"
  echo "  ${COLOR_YELLOW}mas gitops-cluster${TEXT_RESET}                              Configure cluster-level GitOps resources and operators"
  echo "  ${COLOR_YELLOW}mas gitops-cis-compliance${TEXT_RESET}                       Apply CIS compliance configurations to the cluster"
  echo "  ${COLOR_YELLOW}mas gitops-rosa${TEXT_RESET}                                 Provision Red Hat OpenShift Service on AWS (ROSA) cluster"
  echo "  ${COLOR_YELLOW}mas gitops-aws-infrastructure${TEXT_RESET}                   Set up AWS infrastructure components for MAS"
  echo "  ${COLOR_YELLOW}mas gitops-iac${TEXT_RESET}                                  Manage Infrastructure as Code (IaC) operations"
  echo ""
  echo "${COLOR_CYAN}GitOps Dependencies:${TEXT_RESET}"
  echo "  ${COLOR_YELLOW}mas gitops-mongo${TEXT_RESET}                                Deploy MongoDB for MAS using GitOps"
  echo "  ${COLOR_YELLOW}mas gitops-process-mongo-user${TEXT_RESET}                   Process and configure MongoDB user credentials"
  echo "  ${COLOR_YELLOW}mas gitops-kafka${TEXT_RESET}                                Deploy Apache Kafka for MAS using GitOps"
  echo "  ${COLOR_YELLOW}mas gitops-db2u${TEXT_RESET}                                 Deploy Db2 Universal for MAS using GitOps"
  echo "  ${COLOR_YELLOW}mas gitops-db2u-database${TEXT_RESET}                        Create and configure Db2 databases"
  echo "  ${COLOR_YELLOW}mas gitops-rds-db2-database${TEXT_RESET}                     Configure AWS RDS Db2 database for MAS"
  echo "  ${COLOR_YELLOW}mas gitops-cos${TEXT_RESET}                                  Deploy IBM Cloud Object Storage for MAS"
  echo "  ${COLOR_YELLOW}mas gitops-cp4d${TEXT_RESET}                                 Deploy IBM Cloud Pak for Data using GitOps"
  echo "  ${COLOR_YELLOW}mas gitops-cp4d-service${TEXT_RESET}                         Deploy Cloud Pak for Data services"
  echo "  ${COLOR_YELLOW}mas gitops-efs${TEXT_RESET}                                  Configure AWS Elastic File System for MAS"
  echo "  ${COLOR_YELLOW}mas gitops-efs-csi-driver${TEXT_RESET}                       Deploy AWS EFS CSI driver"
  echo "  ${COLOR_YELLOW}mas gitops-dro${TEXT_RESET}                                  Deploy IBM Data Reporter Operator"
  echo "  ${COLOR_YELLOW}mas gitops-odh${TEXT_RESET}                                  Deploy Open Data Hub for AI/ML workloads"
  echo "  ${COLOR_YELLOW}mas gitops-nvidia-gpu${TEXT_RESET}                           Configure NVIDIA GPU operator for AI workloads"
  echo ""
  echo "${COLOR_CYAN}GitOps MAS Core:${TEXT_RESET}"
  echo "  ${COLOR_YELLOW}mas gitops-license${TEXT_RESET}                              Configure MAS licensing using GitOps"
  echo "  ${COLOR_YELLOW}mas gitops-suite${TEXT_RESET}                                Deploy Maximo Application Suite core"
  echo "  ${COLOR_YELLOW}mas gitops-suite-app-install${TEXT_RESET}                    Install MAS applications (Manage, Health, etc.)"
  echo "  ${COLOR_YELLOW}mas gitops-suite-app-config${TEXT_RESET}                     Configure MAS application settings"
  echo "  ${COLOR_YELLOW}mas gitops-mas-config${TEXT_RESET}                           Configure MAS instance settings"
  echo "  ${COLOR_YELLOW}mas gitops-suite-dns${TEXT_RESET}                            Configure DNS settings for MAS"
  echo "  ${COLOR_YELLOW}mas gitops-suite-certs${TEXT_RESET}                          Manage certificates for MAS"
  echo "  ${COLOR_YELLOW}mas gitops-suite-workspace${TEXT_RESET}                      Create and configure MAS workspaces"
  echo "  ${COLOR_YELLOW}mas gitops-suite-license-service${TEXT_RESET}                Deploy Suite License Service"
  echo "  ${COLOR_YELLOW}mas gitops-mas-provisioner${TEXT_RESET}                      Automated MAS provisioning orchestration"
  echo "  ${COLOR_YELLOW}mas gitops-mas-fvt-preparer${TEXT_RESET}                     Prepare environment for MAS functional verification testing"
  echo ""
  echo "${COLOR_CYAN}GitOps AI Services:${TEXT_RESET}"
  echo "  ${COLOR_YELLOW}mas gitops-aiservice${TEXT_RESET}                            Deploy Maximo AI Service"
  echo "  ${COLOR_YELLOW}mas gitops-aiservice-tenant${TEXT_RESET}                     Configure AI Service tenant"
  echo ""
  echo "${COLOR_CYAN}GitOps Deprovisioning:${TEXT_RESET}"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-app-config${TEXT_RESET}               Remove MAS application configurations"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-app-install${TEXT_RESET}              Uninstall MAS applications"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-suite-workspace${TEXT_RESET}          Remove MAS workspaces"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-suite${TEXT_RESET}                    Uninstall Maximo Application Suite"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-suite-license-service${TEXT_RESET}    Remove Suite License Service"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-mongo${TEXT_RESET}                    Remove MongoDB deployment"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-kafka${TEXT_RESET}                    Remove Kafka deployment"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-db2u${TEXT_RESET}                     Remove Db2 Universal deployment"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-db2u-database${TEXT_RESET}            Remove Db2 databases"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-cos${TEXT_RESET}                      Remove Cloud Object Storage"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-cp4d${TEXT_RESET}                     Remove Cloud Pak for Data"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-cp4d-service${TEXT_RESET}             Remove Cloud Pak for Data services"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-efs${TEXT_RESET}                      Remove AWS EFS configuration"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-odh${TEXT_RESET}                      Remove Open Data Hub"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-aiservice${TEXT_RESET}                Remove Maximo AI Service"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-aiservice-tenant${TEXT_RESET}         Remove AI Service tenant"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-cluster${TEXT_RESET}                  Remove cluster-level GitOps resources"
  echo "  ${COLOR_YELLOW}mas gitops-deprovision-rosa${TEXT_RESET}                     Deprovision ROSA cluster"
  echo ""
  echo "For detailed help on any command, run: ${COLOR_CYAN}mas <command> --help${TEXT_RESET}"
  echo ""
}