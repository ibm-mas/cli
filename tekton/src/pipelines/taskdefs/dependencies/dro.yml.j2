- name: dro
  timeout: "0"
  params:
    {{ lookup('template', pipeline_src_dir ~ '/taskdefs/common/cli-params.yml.j2') | indent(4) }}
    - name: dro_action
      value: "$(params.dro_action)"

    - name: mas_instance_id
{% if application is defined and application == "aiservice" %}
      value: $(params.aiservice_instance_id)
{% else %}
      value: $(params.mas_instance_id)
{% endif %}

    - name: custom_labels
      value: $(params.custom_labels)
    - name: ocp_ingress_tls_secret_name
      value: $(params.ocp_ingress_tls_secret_name)

    - name: dro_contact_email
      value: "$(params.dro_contact_email)"
    - name: dro_contact_firstname
      value: "$(params.dro_contact_firstname)"
    - name: dro_contact_lastname
      value: "$(params.dro_contact_lastname)"
    - name: ibm_entitlement_key
      value: $(params.ibm_entitlement_key)
    - name: dro_namespace
      value: $(params.dro_namespace)
    - name: dro_storage_class
      value: $(params.storage_class_rwo)
  taskRef:
    kind: Task
    name: mas-devops-dro
  workspaces:
    - name: configs
      workspace: shared-configs
    - name: pod-templates
      workspace: shared-pod-templates
