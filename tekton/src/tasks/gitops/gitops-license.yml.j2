---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: gitops-license
spec:
  params:
    - name: cluster_name
      type: string
    - name: account
      type: string
    - name: secrets_path
      type: string
    - name: mas_instance_id
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: avp_aws_secret_key
      type: string
    - name: avp_aws_access_key
      type: string
  stepTemplate:
    name: gitops-license
    env:
      - name: CLUSTER_NAME
        value: $(params.cluster_name)
      - name: ACCOUNT
        value: $(params.account)
      - name: SECRET_PATH
        value: $(params.secrets_path)
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)
      - name: SM_AWS_REGION
        value: $(params.avp_aws_secret_region)
      - name: SM_AWS_SECRET_ACCESS_KEY
        value: $(params.avp_aws_secret_key)
      - name: SM_AWS_ACCESS_KEY_ID
        value: $(params.avp_aws_access_key)
  steps:
    - args:
      - |-
        mas gitops-license -a $ACCOUNT -c $CLUSTER_NAME -m $MAS_INSTANCE_ID \
        --secrets-path $SECRET_PATH \
        --license-file /workspace/shared-entitlement/entitlement.lic
      command:
        - /bin/sh
        - -c
      name: gitops-license
      imagePullPolicy: IfNotPresent
      image: quay.io/ibmmas/cli:6.4.0-pre.gitops
  workspaces:
    - name: shared-entitlement

