---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: mas-fvt-deprovision-ocp
spec:
  params:
    {{ lookup('template', task_src_dir ~ '/common/cli-params.yml.j2') | indent(4) }}

  steps:
    - name: ocp-deprovision
      command:
        - /opt/app-root/src/run-role.sh
        - ocp_deprovision
      image: quay.io/ibmmas/cli:11.2.0-pre.mascore3901
      imagePullPolicy: $(params.image_pull_policy)
      env:
        {{ lookup('template', task_src_dir ~ '/common/cli-env.yml.j2') | indent(8) }}

        # Cluster Details
        - name: CLUSTER_NAME
          valueFrom:
            secretKeyRef:
              name: mas-fvt
              key: CLUSTER_NAME
              optional: true
        - name: CLUSTER_TYPE
          valueFrom:
            secretKeyRef:
              name: mas-fvt
              key: CLUSTER_TYPE
              optional: true

        # ROKS Support
        - name: IBMCLOUD_APIKEY
          valueFrom:
            secretKeyRef:
              name: mas-fvt
              key: IBMCLOUD_APIKEY
              optional: true
