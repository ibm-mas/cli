#!/bin/bash
set -e
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. $DIR/../functions/internal/utils

NAMESPACE=$1
OUTPUT_DIR=$2

# Collect Tekton Resources
# -----------------------------------------------------------------------------
echo_h4 "Collect Tekton Resources"
for RESOURCE in tasks taskruns pipelines pipelineruns
do
  $DIR/mg-collect-resources -n $NAMESPACE -r $RESOURCE -d $OUTPUT_DIR/resources
done

exit 0
