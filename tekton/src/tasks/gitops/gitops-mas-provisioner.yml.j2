---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: gitops-mas-provisioner
spec:
  params:
    - name: cluster_name
      type: string
    - name: account
      type: string
    - name: cluster_url
      type: string
      default: ""
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: secrets_path
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: provisioner_namespace
      type: string
    - name: provisioner_version
      type: string
    - name: provisioner_domain
      type: string
    - name: enable_mtls
      type: string
    - name: enable_pd_alert
      type: string
    - name: enable_ocm_alert
      type: string
    - name: base_branch
      type: string
    - name: status_repo_url
      type: string
    - name: async_poll_interval
      type: string
    - name: async_poll_max
      type: string
    - name: account_alias
      type: string
    - name: service_port
      type: string
    - name: csb_ca_certificate_file
      type: string

  stepTemplate:
    name: gitops-mas-provisioner
    env:
      - name: CLUSTER_NAME
        value: $(params.cluster_name)
      - name: ACCOUNT
        value: $(params.account)
      - name: CLUSTER_URL
        value: $(params.cluster_url)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: SECRET_PATH
        value: $(params.secrets_path)
      - name: GIT_BRANCH
        value: $(params.git_branch)
      - name: GITHUB_ORG
        value: $(params.github_org)
      - name: GITHUB_HOST
        value: $(params.github_host)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: SM_AWS_REGION
        value: $(params.avp_aws_secret_region)
      - name: PROVISIONER_NAMESPACE
        value: $(params.provisioner_namespace)
      - name: PROVISIONER_VERSION
        value: $(params.provisioner_version)
      - name: PROVISIONER_DOMAIN
        value: $(params.provisioner_domain)
      - name: STATUS_REPO_URL
        value: $(params.status_repo_url)
      - name: BASE_BRANCH
        value: $(params.base_branch)
      - name: ACCOUNT_ALIAS
        value: $(params.account_alias)
      - name: ENABLE_MTLS
        value: $(params.enable_mtls)
      - name: ENABLE_PD_ALERT
        value: $(params.enable_pd_alert)
      - name: ENABLE_OCM_ALERT
        value: $(params.enable_ocm_alert)
      - name: SERVICE_PORT
        value: $(params.service_port)
      - name: ASYNC_POLL_INTERVAL
        value: $(params.async_poll_interval)
      - name: ASYNC_POLL_MAX
        value: $(params.async_poll_max)
      - name: CSB_CA_CERTIFICATE_FILE
        value: $(params.csb_ca_certificate_file)
    envFrom:
      - configMapRef:
          name: environment-properties
          optional: true
      - secretRef:
          name: secure-properties
  steps:
    - args:
      - |-
        git config --global user.name "MAS Automation"
        git config --global user.email "you@example.com"
        git config --global user.password $GITHUB_PAT
        
        mkdir -p /tmp/init-mas-provisioner
        mas gitops-mas-provisioner -a $ACCOUNT -c $CLUSTER_NAME \
        --dir /tmp/init-mas-provisioner \
        --secrets-path $SECRET_PATH \
        --github-push \
        --github-host $GITHUB_HOST \
        --github-org $GITHUB_ORG \
        --github-repo $GITHUB_REPO \
        --git-branch $GIT_BRANCH

        exit $?
      command:
        - /bin/sh
        - -c
      name: gitops-mas-provisioner
      imagePullPolicy: IfNotPresent
      image: quay.io/ibmmas/cli:latest
  workspaces:
    - name: configs
