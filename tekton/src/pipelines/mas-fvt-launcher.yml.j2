          values: ["true", "True"]
      runAfter:
        - start-upgrade

    # Uninstall Sync Point
    # -------------------------------------------------------------------------
    # Before we uninstall we want to capture the state of the environment
    - name: finalizer
      timeout: "0"
      params:
        - name: set_finished
          value: "False"
      taskRef:
        kind: Task
        name: mas-fvt-finalize
      runAfter:
        - waitfor-upgrade

    - name: start-uninstall
      timeout: "0"
      taskRef:
