---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: gitops-iac-provision-msk
spec:
  params:
    - name: cluster_name
      type: string
    - name: account
      type: string
    - name: cluster_url
      type: string
      default: ""
    - name: region_name
      type: string
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: mas_instance_id
      type: string
    - name: msk_source
      type: string

   # iac-msk iot params
    - name: msk_iot_kafka_version
      type: string
    - name: msk_iot_instance_type
      type: string
    - name: msk_iot_cluster_username
      type: string
    - name: msk_iot_broker_volume_size
      type: string
    - name: msk_iot_number_of_broker_nodes
      type: string
   # iac-msk monitor params
    - name: msk_monitor_kafka_version
      type: string
    - name: msk_monitor_instance_type
      type: string
    - name: msk_monitor_cluster_username
      type: string
    - name: msk_monitor_broker_volume_size
      type: string
    - name: msk_monitor_number_of_broker_nodes
      type: string


  stepTemplate:
    env:
      - name: CLUSTER_NAME
        value: $(params.cluster_name)
      - name: ACCOUNT
        value: $(params.account)
      - name: CLUSTER_URL
        value: $(params.cluster_url)
      - name: REGION_NAME
        value: $(params.region_name)
      - name: GIT_BRANCH
        value: $(params.git_branch)
      - name: GITHUB_ORG
        value: $(params.github_org)
      - name: GITHUB_HOST
        value: $(params.github_host)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)
      - name: MSK_SOURCE
        value: $(params.msk_source)

      # iac-msk iot params
      - name: MSK_IOT_KAFKA_VERSION
        value: $(params.msk_iot_kafka_version)
      - name: MSK_IOT_INSTANCE_TYPE
        value: $(params.msk_iot_instance_type)
      - name: MSK_IOT_CLUSTER_USERNAME
        value: $(params.msk_iot_cluster_username)
      - name: MSK_IOT_BROKER_VOLUME_SIZE
        value: $(params.msk_iot_broker_volume_size)
      - name: MSK_IOT_NUMBER_OF_BROKER_NODES
        value: $(params.msk_iot_number_of_broker_nodes)

      # iac-msk monitor params
      - name: MSK_MONITOR_KAFKA_VERSION
        value: $(params.msk_monitor_kafka_version)
      - name: MSK_MONITOR_INSTANCE_TYPE
        value: $(params.msk_monitor_instance_type)
      - name: MSK_MONITOR_CLUSTER_USERNAME
        value: $(params.msk_monitor_cluster_username)
      - name: MSK_MONITOR_BROKER_VOLUME_SIZE
        value: $(params.msk_monitor_broker_volume_size)
      - name: MSK_MONITOR_NUMBER_OF_BROKER_NODES
        value: $(params.msk_monitor_number_of_broker_nodes)
    envFrom:
      - configMapRef:
          name: environment-properties
          optional: true
      - secretRef:
          name: secure-properties

  steps:
    - name: provision-msk
      args:
        - |-
          git config --global user.name "MAS Automation"
          git config --global user.email "you@example.com"
          git config --global user.password $GITHUB_PAT

          CMD="mas gitops-iac-provision-msk -a $ACCOUNT -c $CLUSTER_NAME -m $MAS_INSTANCE_ID --dir /workspace/gitops-iac --github-push --github-host $GITHUB_HOST --github-org $GITHUB_ORG --github-repo $GITHUB_REPO --git-branch $GIT_BRANCH --region-name $REGION_NAME"

          [ -n "$MSK_SOURCE" ] && CMD="$CMD --msk_source $MSK_SOURCE"
          [ -n "$MSK_IOT_KAFKA_VERSION" ] && CMD="$CMD --msk_iot_kafka_version $MSK_IOT_KAFKA_VERSION"
          [ -n "$MSK_IOT_INSTANCE_TYPE" ] && CMD="$CMD --msk_iot_instance_type $MSK_IOT_INSTANCE_TYPE"
          [ -n "$MSK_IOT_CLUSTER_USERNAME" ] && CMD="$CMD --msk_iot_cluster_username $MSK_IOT_CLUSTER_USERNAME"
          [ -n "$MSK_IOT_BROKER_VOLUME_SIZE" ] && CMD="$CMD --msk_iot_broker_volume_size $MSK_IOT_BROKER_VOLUME_SIZE"
          [ -n "$MSK_IOT_NUMBER_OF_BROKER_NODES" ] && CMD="$CMD --msk_iot_number_of_broker_nodes $MSK_IOT_NUMBER_OF_BROKER_NODES"
          [ -n "$MSK_MONITOR_KAFKA_VERSION" ] && CMD="$CMD --msk_monitor_kafka_version $MSK_MONITOR_KAFKA_VERSION"
          [ -n "$MSK_MONITOR_INSTANCE_TYPE" ] && CMD="$CMD --msk_monitor_instance_type $MSK_MONITOR_INSTANCE_TYPE"
          [ -n "$MSK_MONITOR_CLUSTER_USERNAME" ] && CMD="$CMD --msk_monitor_cluster_username $MSK_MONITOR_CLUSTER_USERNAME"
          [ -n "$MSK_MONITOR_BROKER_VOLUME_SIZE" ] && CMD="$CMD --msk_monitor_broker_volume_size $MSK_MONITOR_BROKER_VOLUME_SIZE"
          [ -n "$MSK_MONITOR_NUMBER_OF_BROKER_NODES" ] && CMD="$CMD --msk_monitor_number_of_broker_nodes $MSK_MONITOR_NUMBER_OF_BROKER_NODES"

          echo "Executing: $CMD"
          eval $CMD
          exit $?
      command:
        - /bin/sh
        - -c
      imagePullPolicy: IfNotPresent
      image: quay.io/ibmmas/cli:latest

  workspaces:
    - name: configs
      mountPath: /workspace/gitops-iac