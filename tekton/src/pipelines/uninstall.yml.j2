---
apiVersion: tekton.dev/v1beta1
kind: Pipeline
metadata:
  name: mas-uninstall
spec:
  params:
    # 1. Uninstall Parameters
    # -------------------------------------------------------------------------
    {{ lookup('template', params_src_dir ~ '/uninstall.yml.j2') | indent(4) }}

  tasks:
    - name: suite-uninstall
      params:
        # Controls the image pull policy for the ibmmas/cli image
        - name: image_pull_policy
          value: $(params.image_pull_policy)
        # Parameters that enable MongoDb results storage
        - name: mas_instance_id
          value: $(params.mas_instance_id)
      taskRef:
        kind: Task
        name: mas-devops-suite-uninstall
