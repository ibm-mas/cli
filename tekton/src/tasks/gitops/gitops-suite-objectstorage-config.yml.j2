---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: gitops-suite-objectstorage-config
spec:
  params:
    - name: cluster_name
      type: string
    - name: cluster_url
      type: string
      default: ""
    - name: account
      type: string
    - name: secrets_path
      type: string
    - name: mas_instance_id
      type: string
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: argocd_url
      type: string
      default: ""
    - name: argocd_check
      type: string
      default: "false"
    - name: gitops_config_dir
      type: string
      default: "/workspace/configs"
  stepTemplate:
    name: gitops-suite-objectstorage-config
    env:
      - name: CLUSTER_ID
        value: $(params.cluster_name)
      - name: OCP_SERVER
        value: $(params.cluster_url)
      - name: ACCOUNT_ID
        value: $(params.account)
      - name: SECRETS_PATH
        value: $(params.secrets_path)
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)
      - name: GIT_BRANCH
        value: $(params.git_branch)
      - name: GITHUB_ORG
        value: $(params.github_org)
      - name: GITHUB_HOST
        value: $(params.github_host)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: SM_AWS_REGION
        value: $(params.avp_aws_secret_region)
      - name: ARGOCD_URL
        value: $(params.argocd_url)
      - name: ARGOCD_CHECK
        value: $(params.argocd_check)
      - name: GITOPS_CONFIG_DIR
        value: $(params.gitops_config_dir)
    envFrom:
      - configMapRef:
          name: environment-properties
          optional: true
      - secretRef:
          name: secure-properties

  steps:
    - args:
      - |-
        set -e -o pipefail

        mkdir -p /tmp/init-suite-objectstorage-config

        git config --global user.name "MAS Automation"
        git config --global user.email "you@example.com"
        git config --global user.password $GITHUB_PAT

        # export GITOPS_CONFIG_DIR=/workspace/configs
        echo "GITOPS_CONFIG_DIR=${GITOPS_CONFIG_DIR}"

        if [ -f "${GITOPS_CONFIG_DIR}/cos_ibm_system.yml" ]; then
          export COS_CONFIG=${GITOPS_CONFIG_DIR}/${MAS_INSTANCE_ID}-cos/cos-ibm-system.yml
          mkdir -p ${GITOPS_CONFIG_DIR}/${MAS_INSTANCE_ID}-cos
          cp ${GITOPS_CONFIG_DIR}/cos_ibm_system.yml ${COS_CONFIG}
        fi

        mas gitops-mas-config \
          --account-id "$ACCOUNT_ID" \
          --cluster-id "$CLUSTER_ID" \
          --mas-instance-id "$MAS_INSTANCE_ID" \
          --secrets-path "$SECRETS_PATH" \
          --github-push \
          --github-host "$GITHUB_HOST" \
          --github-org "$GITHUB_ORG" \
          --github-repo "$GITHUB_REPO" \
          --git-branch "$GIT_BRANCH" \
          --config-action upsert \
          --mas-config-scope system \
          --mas-config-type objectstorage \
          --dir /tmp/init-suite-objectstorage-config \
          --gitops-config-dir "$GITOPS_CONFIG_DIR"

      command:
        - /bin/sh
        - -c
      name: gitops-suite-objectstorage-config
      imagePullPolicy: IfNotPresent
      image: quay.io/ibmmas/cli:7.10.0-pre.gitops
  workspaces:
    - name: configs
    - name: shared-gitops-configs
