- name: suite-config-watson-studio
  params:
    {{ lookup('template', 'taskdefs/common/cli-params.yml.j2') | indent(4) }}
    - name: devops_suite_name
      value: cfg-suite-watson-studio

    - name: mas_instance_id
      value: $(params.mas_instance_id)
  taskRef:
    kind: Task
    name: mas-devops-suite-config
  # Only needed if either Predict or HPUtilities are being installed
  when:
    - input: "$(params.mas_app_channel_predict)$(params.mas_app_channel_hputilities)$(params.mas_appws_bindings_health_wsl)"
      operator: notin
      values: [""]
  workspaces:
    - name: configs
      workspace: shared-configs