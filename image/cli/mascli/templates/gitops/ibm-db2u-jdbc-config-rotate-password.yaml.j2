---
# DB2 JDBC Configuration
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: mas-{{ MAS_INSTANCE_ID }}-db2-jdbc-config-rotate-password
  namespace: openshift-gitops
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: {{ MAS_INSTANCE_ID }}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{DB2_NAMESPACE}}
  source:
    repoURL: https://github.com/ibm-mas/gitops
    path: applications/ibm-db2u-jdbc-config-rotate-password
    targetRevision: {{ GITOPS_VERSION }}
    plugin:
      env:
        - name: HELM_VALUES
          value: |
            db2_instance_name: {{DB2_INSTANCE_NAME}}
            db2_namespace: {{DB2_NAMESPACE}}
            mas_instance_id: {{MAS_INSTANCE_ID}}
            db2_jdbc_username: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_DB2_USERNAME }}>
            jdbc_instance_password: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_DB2_PASSWORD }}>
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=false
