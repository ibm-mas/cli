---
apiVersion: tekton.dev/v1beta1
kind: Pipeline
metadata:
{% if wait_for_deprovision == true %}
  name: gitops-provision-bootstrap-cluster-after-deprovision
{% else %}
  name: gitops-provision-bootstrap-cluster
{% endif %}
spec:
  description: Provision and Bootstrap GitOps Cluster
  workspaces:
    - name: configs
  params:
{% if wait_for_deprovision == true %}
      # Name of the PipelineRun to wait for
    - name: pipelinerun_name
      type: string
    - name: ignore_failure
      type: string
      default: "False"
      description: Set to 'True' or 'False' (case-sensitive) to configure whether this pipeline continue if the pipeline we are waiting for has failed.
{% endif %}
    - name: cluster_name
      type: string
    - name: ocp_version
      type: string
    - name: avp_type
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: avp_aws_secret_key
      type: string
    - name: avp_aws_access_key
      type: string
    - name: github_url
      type: string
    - name: github_pat
      type: string
    - name: rosa_token
      type: string
    - name: account
      type: string
    - name: secrets_path
      type: string
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: ibm_entitlement_b64
      type: string
    - name: mas_catalog_version
      type: string
    - name: mas_catalog_image
      type: string
    - name: common_services_channel
      type: string
    - name: vpc_ipv4_cidr
      type: string
    - name: mongo_provider
      type: string
      default: aws
    - name: aws_docdb_instance_number
      type: string
      default: 3
  tasks:
{% if wait_for_deprovision == true %}
    # 0. Wait for the deprovsion pipeline to complete
    # -------------------------------------------------------------------------
    - name: wait-for-deprovision
      params:
        - name: pipelinerun_name
          value: $(params.pipelinerun_name)
        - name: ignore_failure
          value: $(params.ignore_failure)
      taskRef:
        kind: Task
        name: mas-fvt-wait-for-pipelinerun
{% endif %}
    - name: gitops-init-rosa
{% if wait_for_deprovision == true %}
      runAfter:
        - wait-for-deprovision
{% endif %}
      params:
        - name: cluster_name
          value: $(params.cluster_name)
        - name: aws_region
          value: $(params.avp_aws_secret_region)
        - name: aws_secret_access_key
          value: $(params.avp_aws_secret_key)
        - name: aws_access_key_id
          value: $(params.avp_aws_access_key)
        - name: rosa_token
          value: $(params.rosa_token)
        - name: ocp_version
          value: $(params.ocp_version)
      taskRef:
        kind: Task
        name: gitops-init-rosa
      workspaces:
        - name: configs
          workspace: configs
    - name: gitops-bootstrap
      runAfter:
        - gitops-init-rosa
      params:
        - name: cluster_name
          value: $(params.cluster_name)
        - name: avp_type
          value: $(params.avp_type)
        - name: avp_aws_secret_region
          value: $(params.avp_aws_secret_region)
        - name: avp_aws_secret_key
          value: $(params.avp_aws_secret_key)
        - name: avp_aws_access_key
          value: $(params.avp_aws_access_key)
        - name: github_url
          value: $(params.github_url)
        - name: github_pat
          value: $(params.github_pat)
      taskRef:
        kind: Task
        name: gitops-bootstrap
      workspaces:
        - name: configs
          workspace: configs
    - name: gitops-init-cluster
      runAfter:
        - gitops-bootstrap
      params:
        - name: cluster_name
          value: $(params.cluster_name)
        - name: account
          value: $(params.account)
        - name: secrets_path
          value: $(params.secrets_path)
        - name: git_branch
          value: $(params.git_branch)
        - name: github_org
          value: $(params.github_org)
        - name: github_repo
          value: $(params.github_repo)
        - name: github_host
          value: $(params.github_host)
        - name: ibm_entitlement_b64
          value: $(params.ibm_entitlement_b64)
        - name: mas_catalog_version
          value: $(params.mas_catalog_version)
        - name: mas_catalog_image
          value: $(params.mas_catalog_image)
        - name: common_services_channel
          value: $(params.common_services_channel)
        - name: avp_aws_secret_region
          value: $(params.avp_aws_secret_region)
        - name: avp_aws_secret_key
          value: $(params.avp_aws_secret_key)
        - name: avp_aws_access_key
          value: $(params.avp_aws_access_key)
        - name: github_pat
          value: $(params.github_pat)
      taskRef:
        kind: Task
        name: gitops-init-cluster
      workspaces:
        - name: configs
          workspace: configs
    - name: gitops-init-mongo
      runAfter:
        - gitops-init-cluster
      params:
        - name: cluster_name
          value: $(params.cluster_name)
        - name: account
          value: $(params.account)
        - name: secrets_path
          value: $(params.secrets_path)
        - name: avp_aws_secret_region
          value: $(params.avp_aws_secret_region)
        - name: avp_aws_secret_key
          value: $(params.avp_aws_secret_key)
        - name: avp_aws_access_key
          value: $(params.avp_aws_access_key)
        - name: vpc_ipv4_cidr
          value: $(params.vpc_ipv4_cidr)
        - name: mongo_provider
          value: $(params.mongo_provider)
        - name: aws_docdb_instance_number
          value: $(params.aws_docdb_instance_number)
      taskRef:
        kind: Task
        name: gitops-init-mongo
      workspaces:
        - name: configs
          workspace: configs
    - name: gitops-init-cis-compliance
      runAfter:
        - gitops-init-cluster
      params:
        - name: cluster_name
          value: $(params.cluster_name)
        - name: account
          value: $(params.account)
        - name: git_branch
          value: $(params.git_branch)
        - name: github_org
          value: $(params.github_org)
        - name: github_repo
          value: $(params.github_repo)
        - name: github_host
          value: $(params.github_host)
        - name: github_pat
          value: $(params.github_pat)
      taskRef:
        kind: Task
        name: gitops-init-cis-compliance
      workspaces:
        - name: configs
          workspace: configs
