      onError: continue # Ensure bad FVTs don't break the pipeline
      resources: {}
      workingDir: /opt/ibm/test/src
      env:
        - name: TEST_SUITE
          value: operatormaturity

  workspaces:
    - name: configs
    - name: pod-templates
      optional: true
