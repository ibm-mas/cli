---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: gitops-cp4d-service
spec:
  params:
    - name: cluster_name
      type: string
    - name: account
      type: string
    - name: git_branch
      type: string
    - name: github_org
      type: string
    - name: github_repo
      type: string
    - name: github_host
      type: string
    - name: github_pat
      type: string
    - name: secrets_path
      type: string
    - name: avp_aws_secret_region
      type: string
    - name: avp_aws_secret_key
      type: string
    - name: avp_aws_access_key
      type: string
    - name: mas_instance_id
      type: string
    - name: cpd_product_version
      type: string
    - name: cpd_service_name
      type: string
    - name: cpd_service_block_storage_class
      type: string
    - name: cpd_service_storage_class
      type: string

  stepTemplate:
    name: gitops-cp4d-service
    env:
      - name: CLUSTER_NAME
        value: $(params.cluster_name)
      - name: ACCOUNT
        value: $(params.account)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: SECRET_PATH
        value: $(params.secrets_path)
      - name: GIT_BRANCH
        value: $(params.git_branch)
      - name: GITHUB_ORG
        value: $(params.github_org)
      - name: GITHUB_HOST
        value: $(params.github_host)
      - name: GITHUB_REPO
        value: $(params.github_repo)
      - name: GITHUB_PAT
        value: $(params.github_pat)
      - name: SM_AWS_REGION
        value: $(params.avp_aws_secret_region)
      - name: SM_AWS_SECRET_ACCESS_KEY
        value: $(params.avp_aws_secret_key)
      - name: SM_AWS_ACCESS_KEY_ID
        value: $(params.avp_aws_access_key)
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)
      - name: CPD_PRODUCT_VERSION
        value: $(params.cpd_product_version)
      - name: CPD_SERVICE_NAME
        value: $(params.cpd_service_name)
      - name: CPD_SERVICE_BLOCK_STORAGE_CLASS
        value: $(params.cpd_service_block_storage_class)
      - name: CPD_SERVICE_STORAGE_CLASS
        value: $(params.cpd_service_storage_class)
  steps:
    - args:
      - |-
        git config --global user.name "MAS Automation"
        git config --global user.email "you@example.com"
        git config --global user.password $GITHUB_PAT
        
        ROSA_CONFIG=/workspace/configs/tmp-rosa/rosa-$(params.cluster_name)-details.yaml
        export OCP_SERVER=$(cat $ROSA_CONFIG | yq -r '.data.api_url')
        export OCP_USERNAME=$(cat $ROSA_CONFIG | yq -r '.data.username')
        export ROSA_CLUSTER_ADMIN_PASSWORD=$(cat $ROSA_CONFIG | yq -r '.data.admin_password')
        oc login -u $OCP_USERNAME -p $ROSA_CLUSTER_ADMIN_PASSWORD $OCP_SERVER --insecure-skip-tls-verify
        OC_RC=$?
        if [ $OC_RC -ne 0 ]; then
          echo "oc login failed"
          exit 1
        fi
        
        echo "Set k8s context"
        export K8S_AUTH_CONTEXT=$(oc whoami -c)

        mkdir -p /tmp/init-cp4d-service
        mas gitops-cp4d-service -a $ACCOUNT -c $CLUSTER_NAME \
        --dir /tmp/init-cp4d-service \
        --secrets-path $SECRET_PATH \
        --github-push \
        --github-host $GITHUB_HOST \
        --github-org $GITHUB_ORG \
        --github-repo $GITHUB_REPO \
        --git-branch $GIT_BRANCH

        exit $?
      command:
        - /bin/sh
        - -c
      name: gitops-cp4d-service
      imagePullPolicy: IfNotPresent
      image: quay.io/ibmmas/cli:7.10.0-pre.gitops
  workspaces:
    - name: configs
    - name: shared-gitops-configs
