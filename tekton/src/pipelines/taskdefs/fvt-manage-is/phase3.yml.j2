# Nuclear - API Tests
- name: fvt-manage-nuclear-api
  {{ lookup('template', 'taskdefs/fvt-manage/api/taskref.yml.j2') | indent(2) }}
  params:
    {{ lookup('template', 'taskdefs/fvt-manage/api/params.yml.j2') | indent(4) }}
    - name: fvt_test_suite
      value: nuclear-api
  when:
    - input: "nuclear"
      operator: in
      values: ["$(tasks.fvt-component.results.component_names[*])"]
  runAfter:
    - fvt-manage-acm-api
    - fvt-manage-acm-ui
    - fvt-manage-hse-api
    - fvt-manage-hse-ui
    - fvt-manage-serviceprovider-api
    - fvt-manage-serviceprovider-ui


