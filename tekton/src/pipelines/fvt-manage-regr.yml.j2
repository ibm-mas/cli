        {{ lookup('template', 'taskdefs/fvt-manage/api/params.yml.j2') | indent(8) }}
        - name: fvt_test_suite
          value: avi-reg1-2
        - name: fvt_mas_appws_component
          value: aviation
        - name: fvt_test_driver
          value: tpae
      runAfter:
        - fvt-manage-avi-reg1-1

    # Manage Aviation FVT - Regression Lane 2 - Task 2
