  params:
    {{ lookup('template', 'taskdefs/fvt-apps/common/params-assist-testng.yml.j2') | indent(4) }}
    - name: fvt_test_suite
      value: testng-mobile-diagnosis
    - name: assist_test_type
      value: mobileapp
    - name: assist_device_type
      value: android
  runAfter:
    - ivtcore-assist


