mas_config_chart: ibm-watson-studio-config
mas_config_name: "{{ MAS_CONFIG_NAME }}"
mas_config_scope: {{ MAS_CONFIG_SCOPE }}
mas_workspace_id: {{ MAS_WORKSPACE_ID }}
mas_application_id: {{ MAS_APP_ID }}
mas_config_kind: "watsonstudiocfgs"
mas_config_api_version: "config.mas.ibm.com"
use_postdelete_hooks: {{ USE_POSTDELETE_HOOKS }}

suite_watson_studio_secret_name: "{{ MAS_INSTANCE_ID }}-usersupplied-watsonstudio-creds-system"

suite_wscfg_labels:
  mas.ibm.com/applicationId: "{{ MAS_APP_ID }}"
  mas.ibm.com/configScope: workspace-application
  mas.ibm.com/instanceId: "{{ MAS_INSTANCE_ID }}"
  mas.ibm.com/workspaceId: "{{ MAS_WORKSPACE_ID }}"

suite_watson_studio_username: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_WATSON_STUDIO_USERNAME }}>
suite_watson_studio_password: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_WATSON_STUDIO_PASSWORD }}>
watson_studio_config:
  config:
    credentials:
      secretName: "{{ MAS_INSTANCE_ID }}-usersupplied-watsonstudio-creds-system"
    endpoint: <path:{{ SECRETS_PATH }}:{{ SECRET_KEY_WATSON_STUDIO_URL }}>
  displayName: "MAS - Watson Studio configuration"
  type: external
