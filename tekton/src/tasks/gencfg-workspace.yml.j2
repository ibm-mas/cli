---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: mas-devops-gencfg-workspace
spec:
  params:
    {{ lookup('template', task_src_dir ~ '/common/cli-params.yml.j2') | indent(4) }}

    # MAS Instance
    - name: mas_instance_id
      type: string
      description: Instance ID

    # MAS Workspace
    - name: mas_workspace_id
      type: string
      description: Workspace ID
    - name: mas_workspace_name
      type: string
      description: Workspace Name

    # Custom Label Support
    - name: custom_labels
      type: string
      description: Optional MAS custom labels, comma separated list of key=value pairs
      default: ""

  stepTemplate:
    env:
      {{ lookup('template', task_src_dir ~ '/common/cli-env.yml.j2') | indent(6) }}

      - name: MAS_CONFIG_DIR
        value: /workspace/configs

      # MAS Instance
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)

      # MAS Workspace
      - name: MAS_WORKSPACE_ID
        value: $(params.mas_workspace_id)
      - name: MAS_WORKSPACE_NAME
        value: $(params.mas_workspace_name)

      # Custom Label Support
      - name: CUSTOM_LABELS
        value: $(params.custom_labels)

  steps:
    - name: gencfg-workspace
      command:
        - /opt/app-root/src/run-role.sh
        - gencfg_workspace
      image: quay.io/ibmmas/cli:11.3.0-pre.mascore3901
      imagePullPolicy: $(params.image_pull_policy)
      workingDir: /workspace/configs

  workspaces:
    - name: configs
