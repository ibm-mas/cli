  params:
    {{ lookup('template', pipeline_src_dir ~ '/taskdefs/fvt-manage/ui-cypress/params.yml.j2') | indent(4) }}
    - name: fvt_test_suite
      value: civil-ui-operationalmap
  when:
    - input: "civil"
