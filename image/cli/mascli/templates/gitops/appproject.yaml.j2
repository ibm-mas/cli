---
apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: {{ MAS_INSTANCE_ID }}
  namespace: openshift-gitops
spec:
  description: MAS Instance {{ MAS_INSTANCE_ID }}
  clusterResourceWhitelist:
    - group: '*'
      kind: '*'
  destinations:
    - name: '*'
      namespace: '*-{{ MAS_INSTANCE_ID }}-*'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-core'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-sls'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-assist'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-health'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-hputilities'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-iot'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-manage'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-monitor'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-mso'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-optimizer'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-predict'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-safety'
      server: '*'
    - name: '*'
      namespace: 'mas-{{ MAS_INSTANCE_ID }}-visualinspection'
      server: '*'

  namespaceResourceWhitelist:
    - group: '*'
      kind: '*'
  sourceRepos:
    - '*'